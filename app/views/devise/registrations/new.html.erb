<div class="row">
  <div class="span12">
    <% if devise_error_messages!.include? " " %>
        <div class="alert alert-danger alert-dismissable">
          <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>   
          <%= devise_error_messages! %>
      </div>
      <% end %>
  </div>
</div>

<div class="row">
  <div class="span8">
    <h1>Sign up</h1>
  </div>
</div>


<div clas="row">
  <div class ="span5 border-form-div">

<%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), html: {class: "well form-horizontal"}) do |f| %>

  <%= f.input_field :first_name, :autofocus =>true, :placeholder => "First Name" %>

  <%= f.input_field :last_name, :placeholder => "Last Name" %>

  <%= f.input_field :profile_name, :placeholder => "Profile Name" %>

  <%= f.email_field :email, :placeholder => "Email" %>

  <%= f.password_field :password, :placeholder =>"Password" %>

  <%= f.password_field :password_confirmation, :placeholder =>"Confirm Password" %>
  <div>
  <%= f.submit "Sign up", :class=>"btn btn-success" %>
</div>
<% end %>

<%= render "devise/shared/links" %>
</div>
</div>