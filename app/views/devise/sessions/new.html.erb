

<div class="row">
	<div class="col-md-6 col-md-offset-3">
		<h2>Sign in</h2>
	</div>
</div>
<div class="row">
	<div class="col-md-6 col-md-offset-3 border-form-div">
		<%= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name), html: {class: "well"}) do |f| %>

		<%= f.email_field :email, :autofocus => true, :placeholder => 'Email address' %>
		<%= f.password_field :password, :placeholder => 'Password' %>

		<% if devise_mapping.rememberable? -%>
		<div><%= f.input_field :remember_me, as: :boolean, inline_label: "Remember Me" %></div>
		<% end -%>

		<div><%= f.submit "Sign in", :class=>"btn btn-success" %>
		</div>
		<% end %>

		<%= render "devise/shared/links" %>
	</div>
</div>