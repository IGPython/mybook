<p id="notice"><%= notice %></p>


<div class="status">
	<div class="row">
		<div class= "span1">
			<%= image_tag @status.user.gravatar_image %>
		</div>
		<div class ="span7">
			<strong><%= @status.user.full_name %></strong>
			<p><%= @status.content %></p>
		</div>
	</div>
</div>
<div class ="row">
	<div class="span7">
		<% if @status.user == current_user %>
		<%= link_to 'Edit', edit_status_path(@status) %> |
		<% end %>
		<%= link_to 'Back', statuses_path %>
	</div>
</div>

