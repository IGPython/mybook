<!DOCTYPE html>
<html>
<head>
  <title>MyBook</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
	<nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
		<div class="navbar-header">
			    <a class="brand" href="/">MyBook</a>
		</div>
		<div class="navbar">
			<ul class="nav navbar-nav">
				<li><%= link_to "All Statuses", statuses_path %></li>
			</ul>
			<ul class="nav navbar-nav pull-right">
				<% if user_signed_in? %>
					<li><%= link_to current_user.full_name, edit_user_registration_path %></li>
					<li><%= link_to "log out", destroy_user_session_path, method: :delete %></li>
				<% else %>
					<li><%= link_to "log in", signin_path %></li>
					<li><%= link_to "sign up", register_path %></li>

				<% end %>
			</ul>
		</div>
	</nav>
	<div class="container">
		<% flash.each do |type, message| %>
			<div class = "alert <%= flash_class type %> alert-dismissable">
				<button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;
				</button>
				<%= message %>
			</div>
		<% end %>
		<%= yield %>
	</div>
</body>
</html>
